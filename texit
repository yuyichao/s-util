#!/bin/bash

# tool to quickly convert a latex string into pdf

echo "\\documentclass{article}\\pagestyle{empty}\\begin{document}\\[" > tmp$$.tex

echo "$1" >> tmp$$.tex
 
echo "\\]\\end{document}" >> tmp$$.tex
 
pdflatex tmp$$.tex && rm *.aux *.log *.synctex.gz tmp$$.tex

if [ $(uname) == "Darwin" ]; then #mac os x
    open tmp$$.pdf
else
    xopen tmp$$.pdf
fi
