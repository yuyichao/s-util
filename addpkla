#!/bin/bash

function s_shelp()
{
    echo "This command add a permission of a certain action to polkit"
    echo "USAGE:"
    echo $'\t'"$0 [OPTIONS] policies"
    echo "OPTIONS:"
    echo $'\t'"-u/--user USER: to add a permission for USER"
    echo $'\t'"-v/--version: show the version number"
    echo $'\t'"-h/--help: show this help and exit"
}

. "${S_UTIL_INSTALL_DIR}/s_init.sh"

if [ $(id -u) != "0" ] ;then
    sudo $0 -u $(whoami) $@
    exit
fi

for ((i = 0;i <= $#;)) ;do
    case ${!i} in
	-u|--user)
	    shift $i
	    S_USERNAME=${!i}
	    shift $i
	    ;;
	*)
	    let 'i++'
	    ;;
	esac
done

for arg in $@
do
	(
	    echo '['${arg}']'
	    echo "Identity=unix-user:${S_USERNAME}"
	    echo "Action=${arg}"
	    echo "ResultAny=no"
	    echo "ResultInactive=no"
	    echo "ResultActive=yes"
	) >> /etc/polkit-1/localauthority/50-local.d/${arg}.pkla
done
