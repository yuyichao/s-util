#!/bin/bash

if [ $(id -u) != "0" ] ;then
    sudo $0 -u $(whoami) $@
    exit
fi

for ((i = 0;i <= $#;)) ;do
    case ${!i} in
	-u)
	    shift $i
	    S_USERNAME=${!i}
	    shift $i
	    ;;
	*)
	    let 'i++'
	    ;;
	esac
done

for arg in $@
do
	(
	    echo '['${arg}']'
	    echo "Identity=unix-user:${S_USERNAME}"
	    echo "Action=${arg}"
	    echo "ResultAny=no"
	    echo "ResultInactive=no"
	    echo "ResultActive=yes"
	) >> /etc/polkit-1/localauthority/50-local.d/${arg}.pkla
done
