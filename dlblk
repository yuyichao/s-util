#!/bin/bash

. s_init.sh

change=1

for ((i = 0;i < ${#args[@]};)) ;do
    case "${args[i]}" in
	-s|--show)
	    darg
	    change=0
	    ;;
	*)
	    let 'i++'
	    ;;
    esac
done

[[ ${#args[@]} == 0 ]] && exit 1

if [[ ${change} == 0 ]] ;then
    grep -n '[[:blank:]][[:blank:]]*$' "${args[@]}"
else
    for ((i = 0;i < ${#args[@]};i++)) ;do
	sed -i "${args[i]}" -e '/[[:blank:]]$/s/[[:blank:]]*$//g'
    done
fi
